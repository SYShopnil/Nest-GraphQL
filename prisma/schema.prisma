generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      String   @id @default(uuid())
  name    String
  role    String
  profile Profile?
  posts   Post[]
}

model Profile {
  id   String @id
  age  String
  user User   @relation(fields: [id], references: [id], onDelete: Cascade)
}

model Post {
  id      String @id
  content String
  postBy  User   @relation(fields: [userId], references: [id])
  userId  String
}
